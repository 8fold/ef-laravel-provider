{
	"name": "8fold/laravel-provider",
  "description": "A generic Laravel Service Provider and resources for creating Laravel sites",
	"type": "library",
	"license": "MIT",
	"require": {
		"php": "7.*",
		"8fold/php-shoop": "0.4.*",
    "8fold/php-shoop-extras": "0.1.*",
		"8fold/php-markup": "0.1.*",
		"spatie/yaml-front-matter": "2.0.*"
	},
	"require-dev": {
    "phpunit/phpunit": "9.1.*",
    "phpunit/php-code-coverage": "8.0.*"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	},
	"autoload": {
		"psr-4": {
			"Eightfold\\Site\\": "./src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
		}
	},
	"extra": {
		"laravel": {
			"providers": [
				"Eightfold\\Site\\Provider"
			],
			"dont-discover": []
		}
	},
	"prefer-stable": true
}
